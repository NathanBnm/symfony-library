{% extends 'base.html.twig' %}

{% block title %}Books{% endblock %}

{% block body %}
    <div class="container">
        <div class="row my-5">
            <div class="col">
                <h1>Books</h1>
                <p>
                    Total : {{ books|length }}
                </p>
            </div>
        </div>
        <div class="row my-2">
            <div class="col">
                {% for book in books %}
                    <div class="card mb-3" style="max-width: 540px;">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <img src="{{  vich_uploader_asset(book, 'coverFile') }}" alt="{{ book.title }}">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">{{ book.title }}</h5>
                                    <p class="card-text">{{ book.author }}</p>
                                    <p class="card-text"><small class="text-muted"></small>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <p>Sorry, no books yet!</p>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
