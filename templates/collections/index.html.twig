{% extends 'base.html.twig' %}

{% block title %}Collections{% endblock %}

{% block body %}
    <div class="container">
        <div class="row my-5">
            <div class="col">
                <h1>Collections</h1>
                <p>
                    Total : {{ collections|length }}
                </p>
            </div>
        </div>
        <div class="row my-2">
            <div class="col">
                {% if collections %}
                    <div class="list-group">
                        {% for collection in collections %}
                            <a href="#"
                               class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                {{ collection.title }}
                                <span class="badge bg-primary rounded-pill">Number of books</span>
                            </a>
                        {% endfor %}
                    </div>
                {% else %}
                    <p>Sorry, no collections yet!</p>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
