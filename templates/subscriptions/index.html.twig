{% extends 'layouts/base.html.twig' %}

{% block title %}My books{% endblock %}

{% block body %}
    <div class="container">
        <div class="row my-5">
            <div class="col">
                <h1>My books</h1>
                <p>
                    Total : {{ subscriptions|length }}
                </p>
            </div>
        </div>
        <div class="row my-2">
            <div class="col">
                {% for subscription in subscriptions %}
                    <div class="card mb-3" style="max-width: 540px;">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <img src="{{  vich_uploader_asset(subscription.book, 'coverFile') }}" alt="{{ subscription.book.title }}">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">{{ subscription.book.title }}</h5>
                                    <p class="card-text">{{ subscription.book.author }}</p>
                                    <p class="card-text"><small class="text-muted"></small>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <p>You didn't subscribed to any book yet!</p>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
